<script type="text/javascript">
function validateForm()
{
var x=document.forms["register"]["userid"].value;
var y=document.forms["register"]["name"].value;
var z=document.forms["register"]["email"].value;
var q=document.forms["register"]["pwd"].value;
var w=document.forms["register"]["cpwd"].value;

if (x==null || x=="" || y==null || y=="" || z==null 
|| z=="" || q==null || q=="" ||  w==null || w=="" )
{
alert("Please fill all the inputs");
return false;
}
}
</script>
